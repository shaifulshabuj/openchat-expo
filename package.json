{
  "name": "openchat-expo",
  "version": "0.0.1",
  "private": true,
  "description": "Cross-platform OpenChat app built with Expo",
  "keywords": ["expo", "react-native", "nestjs", "trpc", "chat", "social"],
  "author": "OpenChat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shaifulshabuj/openchat-expo.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "mobile": "pnpm --filter @openchat/mobile dev",
    "api": "pnpm --filter @openchat/api dev"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
